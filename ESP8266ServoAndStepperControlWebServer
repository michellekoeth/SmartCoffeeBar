/*
 * ESP8266 Servo Motor Control With Web Server 
 * https://circuits4you.com
 */

#include <ESP8266WiFi.h>
#include <WiFiClient.h>
#include <ESP8266WebServer.h>
#include <Servo.h>
//#include <ArduinoJson.h>

//#include "index.h";

#define LED 2
#define ServoPin D7   //D7 is GPIO14
int Step = 0; //GPIO0---D3 of Nodemcu--Step of stepper motor driver
int Dire  = 2; //GPIO2---D4 of Nodemcu--Direction of stepper motor driver

//WiFi Connection configuration
const char *ssid = "";
const char *password = "";

Servo myservo;  // create servo object to control a servo
// twelve servo objects can be created on most boards

ESP8266WebServer server(80);

//================================================
void handleServo(){
  String POS = server.arg("servoPOS");
  int pos = POS.toInt();
  myservo.write(pos);   // tell servo to go to position
  delay(15);
  Serial.print("Servo Angle:");
  Serial.println(pos);
  digitalWrite(LED,!(digitalRead(LED))); //Toggle LED
  server.send(200, "text/json","{\"status\": \"Success\", \"RequestedAngle\":\""+POS+"\"}");
}

void handleTest() {
  server.send(200, "text/plane","Test Successful");
}

void handleStepper() {
  int i = 0;
  int value = LOW;
  String direction = server.arg("dir");
  int stepno = server.arg("stepno").toInt();
  if (direction == "FWD")  { //Move X steps forward
    digitalWrite(Dire, HIGH); //Rotate stepper motor in clock wise direction
          for( i=1;i<=stepno;i++){
          digitalWrite(Step, HIGH);
          delay(1);
          digitalWrite(Step, LOW);
          delay(1);}
    value = HIGH;
  }
  
  if (direction == "REV")  { //Move X steps backwards
    digitalWrite(Dire, LOW); //Rotate stepper motor in anti clock wise direction
          for( i=1;i<=stepno;i++){
          digitalWrite(Step, HIGH);
          delay(1);
          digitalWrite(Step, LOW);
          delay(1);}
    value = LOW;
  }
  server.send(200, "text/json","{\"status\": \"Success\", \"Direction\":\"" + direction + "\", \"Steps\":\"" + String(stepno) + "\"}");
}

//void handleRoot() {
// String s = MAIN_page; //Read HTML contents
// server.send(200, "text/html", s); //Send web page
//}

//================================================
//            Setup
//================================================
void setup() {
  delay(1000);
  Serial.begin(115200);
  Serial.println();

  pinMode(LED,OUTPUT);
  myservo.attach(ServoPin); // attaches the servo on GIO2 to the servo object

  pinMode(Step, OUTPUT); //Step pin as output
  pinMode(Dire,  OUTPUT); //Direcction pin as output
  digitalWrite(Dire, LOW); // Currently no stepper motor movement
  digitalWrite(Step, LOW);
  pinMode(LED_BUILTIN, OUTPUT); 
  
  WiFi.mode(WIFI_STA);
  //Connect to wifi Network
  WiFi.begin(ssid, password);     //Connect to your WiFi router
  Serial.println("");

  // Wait for connection
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }

  //If connection successful show IP address in serial monitor
  Serial.println("");
  Serial.print("Connected to ");
  Serial.println(ssid);
  Serial.print("IP address: ");
  Serial.println(WiFi.localIP());  //IP address assigned to your ESP

  //Initialize Webserver
//  server.on("/",handleRoot);
  server.on("/setPOS",handleServo); //Sets servo position from Web request
  server.on("/setSTEPPER",handleStepper);
  server.on("/testIP", handleTest);
  server.begin();  
}

//================================================
//     LOOP
//================================================
void loop() {
 server.handleClient();
}
//================================================
